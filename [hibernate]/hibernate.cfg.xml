<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
                                         "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
 <session-factory name="">
  <property name="hibernate.connection.driver_class">org.postgresql.Driver</property>
  <property name="hibernate.connection.password">suitair</property>
  <property name="hibernate.connection.url">jdbc:postgresql://localhost:5432/SuitAir</property>
  <property name="hibernate.connection.username">suitair</property>
  <property name="hibernate.dialect">org.hibernate.dialect.PostgreSQLDialect</property>
  <property name="hibernate.id.new_generator_mappings">false</property>
  <property name="hibernate.show_sql">true</property>
  <property name="hibernate.jdbc.batch_size">500</property>
 </session-factory>
</hibernate-configuration>
